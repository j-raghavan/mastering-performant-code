{
    "name": "mastering-performant-code-companion",
    "version": "1.0.0",
    "description": "Interactive Pyodide companion for Mastering Performant Code book",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "lint": "eslint src --ext .js,.ts --fix",
        "format": "prettier --write src/**/*.{js,ts,css,html}",
        "sync-content": "node scripts/sync-content.js",
        "generate-chapters": "node scripts/generate-chapter-data.js",
        "prepare-deployment": "node scripts/prepare-deployment.js",
        "type-check": "tsc --noEmit"
    },
    "dependencies": {
        "plotly.js": "^2.27.1",
        "puppeteer": "^24.11.0"
    },
    "devDependencies": {
        "@types/node": "^20.10.5",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "@vitejs/plugin-react": "^4.2.1",
        "@vitest/ui": "^1.1.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.2",
        "prettier": "^3.1.1",
        "typescript": "^5.3.3",
        "vite": "^5.0.10",
        "vitest": "^1.1.0"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "keywords": [
        "python",
        "pyodide",
        "education",
        "interactive",
        "performance",
        "algorithms"
    ],
    "author": "Mastering Performant Code Team",
    "license": "MIT"
}