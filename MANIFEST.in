# Include the main package
recursive-include mastering_performant_code *.py

# Include source code
recursive-include mastering_performant_code/src *.py
recursive-include mastering_performant_code/tests *.py

# Include documentation
include README.md
include LICENSE
include pytest.ini
include pyproject.toml
include MANIFEST.in

# Include any additional data files
recursive-include mastering_performant_code/src *.md
recursive-include mastering_performant_code/tests *.md

# Exclude unnecessary files
global-exclude *.pyc
global-exclude __pycache__
global-exclude *.pyo
global-exclude *.pyd
global-exclude .git*
global-exclude .pytest_cache*
global-exclude temp*
global-exclude web-companion*
global-exclude pyodide-demo*
global-exclude .github* 